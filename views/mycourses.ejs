<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Courses</title>
    <link rel="stylesheet" href="../css/bootstrap.css" />
    <link rel="stylesheet" href="../css/stylesheet.css" />
  </head>
  <body>
    <div>
      <%-include("../views/navBar.ejs")%>

    </div>
    <h1 class="text-center mt-3 text-white">My Courses</h1>
    <div
      class="container-fluid d-flex flex-wrap flex-column justify-content-around mt-3"
    >
      <div class="card">
        <ul class="list-group list-group-flush">
          <% courses.forEach((course) => { %>
          <li class="list-group-item container-fluid d-flex flex-row mt-2">
            <div class="container-fluid d-flex flex-row">
              <div>
                <img
                  src="../assets/images/<%= course.image %>"
                  alt="<%= course.title %>"
                  class="subcourse-img card-img-top"
                />
              </div>
              <div class="container-fluid align-self-center">
                <h4><%= course.title %></h4>
              </div>
            </div>
            <div>
              <div class="container-fluid d-flex flex-row justify-content-between align-content-center mt-2">
                <a href="/course/<%= course.id %>" type="button" class="btn btn-primary btn mx-2">Study</a>
                <a type="button" class="btn btn-danger btn mx-2">Delete</a>
              </div>
            </div>
          </li>
          <% }); %>

        </ul>
      </div>
    </div>
    <script type="text/javascript" src="../assets/bootstrap.js"></script>
  </body>
</html>
